{
  "manifest_version": 3,
  "name": "Zorro Co-Pilot",
  "version": "0.9.11",
  "description": "AI-powered travel booking assistant *beta*",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://secure.booking.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://secure.booking.com/*"],
      "js": ["content.js"],
      "css": ["popupStyles.css"]
    }
  ]
} 